rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to images, but restricting writes to authenticated users
    match /images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read access to categories for dynamic menu/homepage/gallery
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default catch-all: require authentication for everything else
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}